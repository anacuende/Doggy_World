<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tramitar_pedido_cart"
    tools:context=".CartActivity">

    <!-- Dirección de entrega -->
    <TextView
        android:id="@+id/deliveryAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección de entrega"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Label y campo para la dirección -->
    <TextView
        android:id="@+id/addressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/deliveryAddressLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/addressField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Dirección"
        android:inputType="textPostalAddress"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/addressLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Label y campo para la localidad -->
    <TextView
        android:id="@+id/localityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localidad"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/addressField"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/localityField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Localidad"
        android:inputType="text"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/localityLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/countryField"/>

    <!-- Label y campo para el país -->
    <TextView
        android:id="@+id/countryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="País"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/addressField"
        app:layout_constraintStart_toEndOf="@id/localityField"/>

    <EditText
        android:id="@+id/countryField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="País"
        android:inputType="text"
        android:layout_marginTop="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/countryLabel"
        app:layout_constraintStart_toEndOf="@id/localityField"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Datos de pago -->
    <TextView
        android:id="@+id/paymentDetailsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos de pago"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/countryField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Label y campo para el titular de la tarjeta -->
    <TextView
        android:id="@+id/cardholderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titular de la tarjeta"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/paymentDetailsLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/cardholderField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Titular de la tarjeta"
        android:inputType="textPersonName"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardholderLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Label y campo para el número de tarjeta -->
    <TextView
        android:id="@+id/cardNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de tarjeta"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardholderField"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/cardNumberField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Número de tarjeta"
        android:inputType="number"
        android:maxLength="16"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardNumberLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Label y campo para la fecha de caducidad -->
    <TextView
        android:id="@+id/expiryDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caducidad"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardNumberField"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/expiryDateField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="mm/yy"
        android:inputType="date"
        android:maxLength="5"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/expiryDateLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cvvField"/>

    <!-- Label y campo para el CVV -->
    <TextView
        android:id="@+id/cvvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVV"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardNumberField"
        app:layout_constraintStart_toEndOf="@id/expiryDateField"/>

    <EditText
        android:id="@+id/cvvField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:inputType="number"
        android:maxLength="3"
        android:layout_marginTop="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/cvvLabel"
        app:layout_constraintStart_toEndOf="@id/expiryDateField"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botones al final -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvvField"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonConfirmar"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:background="@drawable/button_fill_shape"
            android:layout_marginStart="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonVolverResumen"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:background="@drawable/button_transparent_shape"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
