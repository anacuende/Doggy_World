<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido/a"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_doggy_world"
        tools:ignore="ContentDescription"/>

    <!-- Label y campo para nombre de usuario o email -->
    <TextView
        android:id="@+id/usernameEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nombre de usuario o email"
        android:layout_gravity="start"
        tools:ignore="HardcodedText"/>
    <EditText
        android:id="@+id/usernameEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Ingrese su nombre de usuario o email"
        tools:ignore="Autofill,HardcodedText"/>

    <!-- Label y campo para contrase침a -->
    <TextView
        android:id="@+id/passwordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Contrase침a"
        android:layout_gravity="start"
        tools:ignore="HardcodedText"/>
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Ingrese su contrase침a"
        tools:ignore="Autofill,HardcodedText"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_fill_shape"
        android:text="Iniciar sesi칩n"
        android:textColor="@color/white"
        tools:ignore="HardcodedText"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_transparent_shape"
        android:text="Registrarse"
        tools:ignore="HardcodedText"/>
</LinearLayout>
